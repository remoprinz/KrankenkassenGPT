{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/meta/sources",
        "function": {
          "functionId": "metaSources",
          "region": "europe-west1"
        }
      },
      {
        "source": "/regions/lookup",
        "function": {
          "functionId": "regionsLookup",
          "region": "europe-west1"
        }
      },
      {
        "source": "/premiums/quote",
        "function": {
          "functionId": "premiumsQuote",
          "region": "europe-west1"
        }
      },
      {
        "source": "/premiums/cheapest",
        "function": {
          "functionId": "premiumsCheapest",
          "region": "europe-west1"
        }
      },
      {
        "source": "/premiums/compare",
        "function": {
          "functionId": "premiumsCompare",
          "region": "europe-west1"
        }
      },
      {
        "source": "/premiums/timeline",
        "function": {
          "functionId": "premiumsTimeline",
          "region": "europe-west1"
        }
      },
      {
        "source": "/premiums/inflation",
        "function": {
          "functionId": "premiumsInflation",
          "region": "europe-west1"
        }
      },
      {
        "source": "/premiums/compare-years",
        "function": {
          "functionId": "premiumsCompareYears",
          "region": "europe-west1"
        }
      },
      {
        "source": "/premiums/ranking",
        "function": {
          "functionId": "premiumsRanking",
          "region": "europe-west1"
        }
      },
      {
        "source": "/charts/img",
        "function": {
          "functionId": "chartsImg",
          "region": "europe-west1"
        }
      },
      {
        "source": "/leads/submit",
        "function": {
          "functionId": "leadsSubmit",
          "region": "europe-west1"
        }
      }
    ],
    "headers": [
      {
        "source": "**",
        "headers": [
          {
            "key": "Access-Control-Allow-Origin",
            "value": "*"
          },
          {
            "key": "Access-Control-Allow-Methods",
            "value": "GET, POST, OPTIONS"
          },
          {
            "key": "Access-Control-Allow-Headers",
            "value": "Content-Type, X-API-Key"
          }
        ]
      }
    ]
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ],
    "source": "functions",
    "runtime": "nodejs20"
  }
}
