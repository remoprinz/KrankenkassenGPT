{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/meta/sources",
        "function": "metaSources"
      },
      {
        "source": "/regions/lookup",
        "function": "regionsLookup"
      },
      {
        "source": "/premiums/quote",
        "function": "premiumsQuote"
      },
      {
        "source": "/premiums/cheapest",
        "function": "premiumsCheapest"
      },
      {
        "source": "/premiums/compare",
        "function": "premiumsCompare"
      },
      {
        "source": "/premiums/timeline",
        "function": "premiumsTimeline"
      },
      {
        "source": "/premiums/inflation",
        "function": "premiumsInflation"
      },
      {
        "source": "/premiums/compare-years",
        "function": "premiumsCompareYears"
      },
      {
        "source": "/premiums/ranking",
        "function": "premiumsRanking"
      }
    ],
    "headers": [
      {
        "source": "**",
        "headers": [
          {
            "key": "Access-Control-Allow-Origin",
            "value": "*"
          },
          {
            "key": "Access-Control-Allow-Methods",
            "value": "GET, POST, OPTIONS"
          },
          {
            "key": "Access-Control-Allow-Headers",
            "value": "Content-Type, X-API-Key"
          }
        ]
      }
    ]
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ],
    "source": "functions",
    "runtime": "nodejs20"
  }
}
